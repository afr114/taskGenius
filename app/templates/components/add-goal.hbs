<div class="goal container">
  <form>
    <div class="form-group">
      {{input class="form-control" value=name id="name" placeholder="Add your goal's for today"}}
    </div>


    <div class="form-group">
      {{textarea class="form-control" value=note id="note" placeholder="Add a note"}}
    </div>


    <div class="row">
      <div class="col-xs-4">
      <button class="btn btn-sm"{{action 'saveGoal'}}>Save</button>
      <button class="btn btn-sm"{{action 'openNoteField'}}>Add Note</button>
    </div>
    </div>
  </form>
</div>
